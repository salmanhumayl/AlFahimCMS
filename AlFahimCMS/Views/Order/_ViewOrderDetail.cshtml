@model AlFahimCMS.ViewModels.ViewOrdersDetailViewModel 

@{
    ViewBag.Title = "ViewOrders";
    Layout = "~/Views/Shared/_LayoutPageCordinator.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>


<script>

    function ViewOrder()
    {
        $('#View-dialog').dialog({
            autoOpen: true,
            width: 300,
            height: 400,
            title: "Order Detail",
            modal: true,
            open: function (event, ui) {
                $('View-dialog').load("Order/ViewOrders")
            }


        });

    }

</script>

<div class="col-lg-6">
    <h2>Order Detail</h2>
    <div class="table-responsive">
        <div class="text-right">
            <button type="submit" class="btn btn-success" >Export the order to csv </button>
            </div>

            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Item Number</th>
                        <th>Item Name</th>
                        <th>Quantity</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lOrdersDetail)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Qty)
                            </td>
                        </tr>

                    }



                </tbody>
            </table>


        </div>

</div>
<div id="View-dialog"></div>