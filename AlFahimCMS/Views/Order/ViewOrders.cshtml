@model AlFahimCMS.ViewModels.ViewOrdersViewModel 

@{
    ViewBag.Title = "ViewOrders";
    Layout = "~/Views/Shared/_LayoutPageCordinator.cshtml";
}

<script>

    function ViewOrder()
    {
        $('#View-dialog').dialog({
            autoOpen: true,
            width: 300,
            height: 400,
            title: "Order Detail",
            modal: true,
            open: function (event, ui) {
                $('#View-dialog').load("Order/ViewOrders")
            }


        });

    }

</script>

<div class="col-lg-6">
    <h2>List of Order(s)</h2>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>Order Number</th>
                    <th>Date</th>
                    <th>Customer</th>
                    <th>SalesMan</th>
                    <th>Status</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.lViewOrders  )
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalesMan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            
                            <td>@Html.ActionLink("View Order", "../Order/ViewOrdersDetail", null, new { @class = "btn btn-warning btn-xs" })</td>

                           

                        </tr>
                    }

                

            </tbody>
        </table>


    </div>
</div>
<div id="View-dialog"></div>